---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta name="description" content="Proscribe - Audio Transcription Service" />
	</head>
	<body class="bg-gray-50">
		<div class="max-w-4xl mx-auto px-4 py-8">
			<slot />
		</div>
	</body>
</html>

<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	.loading {
		@apply text-center my-5;
	}
	.loading:after {
		content: "...";
		animation: dots 1s steps(5, end) infinite;
	}
	@keyframes dots {
		0%, 20% { content: "."; }
		40% { content: ".."; }
		60% { content: "..."; }
		80% { content: "...."; }
		100% { content: "....."; }
	}
</style>
